<section class="suggest_container">

    <div class="title_page">
        <h1 id="title">Mon Journal de suivi</h1>
    </div>

    <!-- nouvelle suggestion -->

    <section class="new_suggest">
        <h2 class="send_suggest">Journal de la journ√©e</h2>
        <textarea name="text" id="comment" class="suggest_comment"></textarea>

        <div class="send_button">Envoyer le journal</div>
    </section>

    <!-- historique des suggestion -->
    <% if (diaries.length) { %>
    <section class="suggest_story">
        <h2 class="suggest_story_title">Historique des journaux</h2>
        <div class="articles_container">
            <% diaries.forEach(function(journal) { %>
            <div class="article"></div>
            <p><%= journal.date %></p>
            <p><%= journal.description %></p>
            <p><%= journal.created_by %></p>
            <p><%= journal.created_for %></p>
            <p><%= journal.created_at %></p>
        </div>
        <% }); %>
        </div>
    </section>
    <% } %>

</section>