        </div>
        <div class="burger-menu">
            <div class="burger-menu-icon">&#9776;</div>
            <ul class="burger-menu-list">
              <% if (!locals.session.user) { %>
                <li><a id="signupBtn" class="modal-btn js-modal" href="#modal1">s'inscrire</a></li>
                <li><a id="loginBtn" class="modal-btn js-modal" href="#modal2">Se connecter</a></li>
                <% } else { %>
                  <% if (locals.session.user.is_nanny) { %>
                    <li><a href="/">Accueil</a></li>
                <li><a href="/nanny/dashboard"><%= user.first_name %></a></li>
                <li><a href="/nanny/profile">Mon profil</a></li>
                <li><a href="/nanny/suggests">Suggestions</a></li>
                <li><a href="/nanny/diary">Journal de suivi</a></li>
                <li><a href="/logout">Déconnexion</a></li>
